<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.alfred">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
        android:name=".InformacoesApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.example.alfred.activity.MeusPedidosActivity" android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity android:name="com.example.alfred.activity.CardapioActivity" android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.example.alfred.activity.TelaInicialActivity"
            android:label="@string/titulo_activity_menu"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name="com.example.alfred.activity.CarrinhoActivity" android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name="com.example.alfred.activity.MinhaContaActivity" android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name="com.example.alfred.activity.MinhasInfosActivity" android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name="com.example.alfred.activity.RecuperarSenhaActivity" android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name="com.example.alfred.activity.CadastroActivity" android:theme="@style/AppTheme.NoActionBar"/>
        <activity android:name="com.example.alfred.activity.MainActivity" android:theme="@style/AppTheme.NoActionBar" android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>