<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:gravity="center"
    android:layout_height="match_parent"
    tools:context=".activity.MainActivity"
    tools:showIn="@layout/activity_main"
    android:padding="24dp">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_logo"
        android:layout_marginBottom="64dp"
        />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:textAlignment="center">

        <View
            android:layout_width="8dp"
            android:layout_height="32dp"
            android:background="@color/colorAccent"
            android:layout_marginRight="12dp"
            />
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:textFontWeight="600"
            android:textSize="24sp"
            android:text="@string/title_content_main" />

    </LinearLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/txMainEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/tx_email"
        app:startIconDrawable="@drawable/ic_email"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/roundex_textfield"
            />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/txMainPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/tx_password"
        app:startIconDrawable="@drawable/ic_password"
        >


    <com.google.android.material.textfield.TextInputEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/roundex_textfield"
        />

    </com.google.android.material.textfield.TextInputLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="12dp"
        android:layout_gravity="end"
        >

        <Button
            android:id="@+id/btnForgotPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:padding="0dp"
            android:textColor="@color/colorGray"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:text="@string/action_forgot_password" />

    </LinearLayout>

    <Button
        android:id="@+id/btnMainSignIn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="64dp"
        android:text="@string/btn_signIn"
        android:background="@drawable/rounded_button"
        />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="12dp"
        android:layout_gravity="center"
        >

        <Button
            android:id="@+id/btnDoNotHaveAccount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:paddingTop="0dp"
            android:paddingBottom="0dp"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:text="@string/action_do_not_have_account" />

    </LinearLayout>

</LinearLayout>